{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 22",

  "compilerOptions": {
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@operators/*": ["src/helpers/operators/*"]
    },

    "outDir": "./dist",
    "rootDir": "./src"
  },
  "exclude": ["node_modules", "dist", "**/*.config.ts", "**/*.config.js", "**/*.test.ts"]
}
