{
    "name": "reactive-hass",
    "description": "Reactive Home Assistant. Configurable automations in TypeScript and RxJS.",
    "version": "0.1.0",
    "author": "Vincent De Snerck <vincent@supervillain.be>",
    "license": "MIT",
    "main": "dist/main.js",
    "scripts": {
        "lint": "eslint src/",
        "lint:fix": "npm run lint -- --fix",
        "prettier": "npx prettier src --check",
        "prettier:fix": "npm run prettier -- --write",
        "format": "npm run prettier:fix && npm run lint:fix",
        "build": "tsc --project tsconfig.build.json",
        "typecheck": "tsc --noEmit",
        "typecheck:test": "tsc --project tsconfig.test.json --noEmit",
        "typecheck:watch": "tsc --noEmit --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "validate": "npm run typecheck && npm run typecheck:test && npm run lint && npm run test",
        "start": "CONFIG_PATH=./config.yaml tsx watch --ignore ./data/ ./src/index.ts",
        "start:debug": "DEBUG=reactive-hass.* npm run start",
        "start:prod": "NODE_ENV=production node ./dist/index.js"
    },
    "volta": {
        "node": "22"
    },
    "dependencies": {
        "@types/convict-format-with-validator": "^6.0.2",
        "@types/require-dir": "^1.0.2",
        "awilix": "^12.0.5",
        "convict": "^6.2.4",
        "convict-format-with-validator": "^6.2.0",
        "date-fns": "^4.1.0",
        "debug": "^4.3.4",
        "glob-to-regexp": "^0.4.1",
        "js-yaml": "^4.1.0",
        "mqtt": "^5.14.1",
        "ms": "^2.1.2",
        "observable-websocket": "^0.1.3",
        "require-dir": "^1.2.0",
        "rxjs": "^7.8.0",
        "tsconfig-paths": "^4.2.0",
        "ws": "^8.12.0"
    },
    "devDependencies": {
        "@types/convict": "^6.1.1",
        "@types/debug": "^4.1.7",
        "@types/glob-to-regexp": "^0.4.1",
        "@types/js-yaml": "^4.0.5",
        "@types/ms": "^0.7.31",
        "@types/node": "^22.11.6",
        "@types/ws": "^8.5.4",
        "@typescript-eslint/eslint-plugin": "^8.45.0",
        "@typescript-eslint/parser": "^8.45.0",
        "@vitest/ui": "^3.2.4",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-vitest": "^0.5.4",
        "prettier": "^3.6.2",
        "tsx": "^4.20.6",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    }
}
